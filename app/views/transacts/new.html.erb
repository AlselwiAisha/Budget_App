<div>
 <% @header = "NEW TRANSACTION" %>
  <%= form_with model: @transact, url: category_transacts_path(@category) do |form| %>
          <div class='main-field'>
            <%= form.text_field :name,  placeholder: "Name", required: true, class:'text-field'%>
            <%= form.number_field :amount, placeholder: "Amount (USD)", required: true, class:'text-field' %>
          </div>
    <%= form.submit "Save", class:'save-btn'%>
  <% end %>
</div>
